doctype html
html
  head
    title Sport Buddy
    style.
      .navbar {
        background-color: #333;
        overflow: hidden;
        padding: 10px 0;
      }
      .navbar a {
        float: left;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }
      .navbar a:hover {
        background-color: #ddd;
        color: black;
      }
      .navbar a.active {
        background-color: #4CAF50;
        color: white;
      }
      .container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
      }
  body
    nav.navbar
      a(href="/") Home
      a(href="/userlist") User List
      a(href="/db_test") Database Test
    .container
      block content