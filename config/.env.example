# ==================================
# SPORT BUDDY APPLICATION - SAMPLE ENV FILE
# ==================================
# Copy this file to .env and update the values
# Never commit your actual .env file to version control

# =================
# DATABASE SETTINGS
# =================
MYSQL_HOST=db
MYSQL_USER=admin
MYSQL_PASS=your_secure_password
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=Sport_Buddy
MYSQL_ROOT_USER=root
DB_CONTAINER=db
DB_PORT=3306

# ==================
# PHPMYADMIN SETTINGS
# ==================
PMA_USER=admin
PMA_PASSWORD=your_secure_password

# ==================
# APPLICATION SETTINGS
# ==================
NODE_ENV=development
PORT=8000
SESSION_SECRET=generate_a_long_random_string_for_security

# ==================
# DOCKER SETTINGS
# ==================
COMPOSE_PROJECT_NAME=sport_buddy
